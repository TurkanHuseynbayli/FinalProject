@model List<Product>
@{
    ViewData["Title"] = "Index";
}
<!-- MAIN START -->
<main>
    <section id="heading">
        <div class="heading-banner-area overlay-bg"
             style="
            background-image: url(img/bg/1.jpg);
            background-position: center;
            background-repeat: no-repeat;
          ">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading-banner">
                            <div class="heading-banner-title">
                                <h2>My Favorite</h2>
                            </div>
                            <div class="breadcumbs pb-15">
                                <ul>
                                    <li class="home"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li>My Favorite</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--SECTION PURCHASE AREA START-->
    <section id="purchase" class="padding-100" style="overflow: hidden">
        <div class="container">
            <!-- Section-title start -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center">
                        <h2 class="title-center">My Favorite Furnitures</h2>
                    </div>
                </div>

                <!-- Section-title end -->
                <div class="col-lg-12">
                    <div class="row">
                        @foreach (Product product in Model)
                        {
                            <!-- SECTION ITEM START -->
                            <div class="col-lg-3">
                                <div class="items">
                                    <div class="card">
                                        <div class="img-box">
                                            <span class="pro-label new-label">@product.New</span>
                                            <span class="pro-price-2 pro-price-1">$ @product.Price.20</span>
                                            <img src="img/product/@product.Image" alt="" />
                                        </div>
                                        <div class="card-content p-2">
                                            <h4><a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">@product.Name</a></h4>
                                            <div class="fix">
                                                <span class="pro-rating">
                                                    @if (product.Rate > 5)
                                                    {
                                                        product.Rate = 5;
                                                    }

                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <a class='rating-@(i<=product.Rate?"on":"off")'><i class="fas fa-star"></i></a>

                                                    }
                                                </span>
                                            </div>
                                            <div class="product-action">
                                                <a href="#"
                                                   data-toggle="tooltip"
                                                   data-placement="top"
                                                   title="Wishlist">
                                                    <i class="far fa-heart"></i>
                                                </a>
                                                <a asp-controller="Basket" asp-action="AddBasket" asp-route-id="@product.Id"
                                                    title="Quick View">
                                                    <i class="fas fa-shopping-cart"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- SECTION ITEM END -->
                        }
                        </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION PURCHASE AREA END-->
</main>
<!-- MAIN END -->
