@model List<Product>
@{
    ViewData["Title"] = "FilterCategory";
}

@foreach (Product product in Model)
{
    foreach (CategoryProduct item in product.CategoryProducts)
    {
        if (item.Category.NameCategory == ViewBag.Name)
        {
            <div class="col-lg-4">
                <div class="items">
                    <div class="card">
                        <div class="img-box">
                            <span class="pro-label new-label">@product.New</span>
                            <span class="pro-price-2 pro-price-1">$ @product.Price.20</span>

                            <img src="~/img/product/@product.Image" alt="" />

                        </div>
                        <div class="card-content p-2">
                            <h4><a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">@product.Name</a></h4>
                            <div class="fix">
                                <span class="pro-rating">
                                    @if (product.Rate > 5)
                                    {
                                        product.Rate = 5;
                                    }

                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <a class='rating-@(i<=product.Rate?"on":"off")'><i class="fas fa-star"></i></a>

                                    }
                                </span>
                            </div>
                            <div class="product-action">
                                <a href="#"
                                   data-toggle="tooltip"
                                   data-placement="top"
                                   title="Wishlist">
                                    <i class="far fa-heart"></i>
                                </a>
                                <a asp-controller="Basket" asp-action="AddBasket" asp-route-id="@product.Id"
                                   title="Quick View">
                                    <i class="fas fa-shopping-cart"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}

