@model AboutVM
@{
    ViewData["Title"] = "Index";
}

<!-- MAIN START -->
<main>
    <section id="heading">
        <div class="heading-banner-area overlay-bg"
             style="
            background-image: url(img/bg/1.jpg);
            background-position: center;
            background-repeat: no-repeat;
          ">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading-banner">
                            <div class="heading-banner-title">
                                <h2>ABOUT US</h2>
                            </div>
                            <div class="breadcumbs pb-15">
                                <ul>
                                    <li class="home"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li>ABOUT US</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ABOUT-US-AREA START -->
    <section id="about" class="padding-100">
        <div class="about-us-area pt-80 pb-80">
            <div class="container">
                <div class="about-us bg-white">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="about-photo">
                                <img  src="~/img/bg/@Model.Abouts.Image" alt="" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="about-brief bg-dark-white">
                                <h4 class="title-1 title-border text-uppercase mb-30">
                                    about hurst
                                </h4>
                               @Html.Raw(Model.Abouts.Description)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ABOUT-US-AREA END -->
    <!-- TEAM-MEMBER-AREA END -->
    <section id="team" class="padding-100">
        <div class="team-member-area pb-80">
            <div class="container">
                <!-- Section-title start -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title text-center">
                            <h2 class="title-borders mb-5">Team Member</h2>
                        </div>
                    </div>
                </div>
                <!-- Section-title end -->

                <div class="team-member">
                    <div class="row">
                        @foreach (Member member in Model.Members)
                        {
                            <div class="col-lg-3 col-md-3 col-sm-6">
                                <div class="single-member text-center bg-white">
                                    <img src="~/img/team/@member.Image" alt="" />
                                    <h3 class="text-uppercase">@member.Name</h3>
                                    <h4 class="text-uppercase text-gray">@member.Specialty</h4>
                                    <p class="text-gray">
                                       @member.Description
                                    </p>
                                    <div class="team-social">
                                        <ul>
                                            <li>
                                                <a href="#"><i class="fab fa-twitter"></i></a>
                                            </li>
                                            <li>
                                                <a href="#"><i class="fas fa-rss"></i></a>
                                            </li>
                                            <li>
                                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                            </li>
                                            <li>
                                                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                                            </li>
                                            <li>
                                                <a href="#"><i class="fab fa-pinterest-p"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                       
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- TEAM-MEMBER-AREA END -->
</main>
<!-- MAIN END -->
