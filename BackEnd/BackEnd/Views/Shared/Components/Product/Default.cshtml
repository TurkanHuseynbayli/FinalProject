@model List<Product>

@foreach (Product product in Model)
{
    
        <div class="items">
            <div class="card">
                <div class="img-box">
                    <span class="pro-label new-label">sale</span>
                    <span class="pro-price-2">$ @product.Price.20</span>
                    <img src="~/img/product/@product.Image" alt="" />
                </div>
                <div class="card-content p-2">
                    <h4><a asp-controller="Product" asp-action="Detail">@product.Name</a></h4>
                    <div class="fix">
                        <span class="pro-rating">
                            <a href="#"><i class="fas fa-star"></i></a>
                            <a href="#"><i class="fas fa-star"></i></a>
                            <a href="#"><i class="fas fa-star"></i></a>
                            <a href="#"><i class="fas fa-star-half-alt"></i></a>
                            <a href="#"><i class="fas fa-star-half-alt"></i></a>
                        </span>
                    </div>
                    <div class="product-action">
                        <a href="#"
                           data-toggle="tooltip"
                           data-placement="top"
                           title="Wishlist">
                            <i class="far fa-heart"></i>
                        </a>
                        <a href="#"
                           class="cart"
                           data-toggle="modal"
                           data-target="#productModal"
                           title="Quick View">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
      
        }
        

