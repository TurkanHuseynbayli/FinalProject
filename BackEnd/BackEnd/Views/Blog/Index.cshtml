
@{
    ViewData["Title"] = "Index";
}

<!-- MAIN START -->
<main>
    <section id="heading">
        <div class="heading-banner-area overlay-bg"
             style="
            background-image: url(img/bg/1.jpg);
            background-position: center;
            background-repeat: no-repeat;
          ">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading-banner">
                            <div class="heading-banner-title">
                                <h2>BLOG</h2>
                            </div>
                            <div class="breadcumbs pb-15">
                                <ul>
                                    <li class="home"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li>Blog</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--BLOG SECTION START-->
    <section id="blog" class="padding-100">
        <div class="blog-area blog-2 pt-50">
            <div class="container">
                <!-- Section-title start -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title text-center">
                            <h2 class="title-borders mb-5">From The Blog</h2>
                        </div>
                    </div>
                </div>
                <!-- Section-title end -->
                <div class="row">
                    <!-- Single-blog start -->
                    @await Component.InvokeAsync("Blog", 9)
                    <!-- Single-blog end -->
                </div>
            </div>
        </div>
    </section>
    <!--BLOG SECTION END-->
</main>
<!-- MAIN END -->
