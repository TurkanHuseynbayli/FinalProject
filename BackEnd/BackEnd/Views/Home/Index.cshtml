@model HomeVM
@{
    ViewData["Title"] = "Home Page";
    bool isFirstSlide = true;
    bool isActiveTab = true;
    bool isActivePro = true;
}

<main>
    <!-- section carousel start -->
    <section id="carousel" style="overflow: hidden">
        <div class="container-fluid">
            <div class="row">
                <div id="carouselExampleControls"
                     class="carousel slide"
                     data-ride="carousel">
                    <div class="carousel-inner">
                        @foreach (Slider slide in Model.Sliders)
                        {
                            <div class="carousel-item @(isFirstSlide?"active":"")" slider="1">
                                <img src="~/img/slider/@slide.Image" class="d-block w-100" alt="..." />
                                <div class="layer"></div>
                                <div class="text-holder">
                                    <h4 class="animate__animated animate__slideInDown">
                                        @slide.Title
                                    </h4>
                                    <h2 class="animate__animated animate__slideInRight">
                                       @Html.Raw(slide.SubTitle)
                                    </h2>
                                    <a class="animate__animated animate__fadeInUp btn btn-md btn-gradient"
                                       href="#">
                                        SHOP NOW
                                    </a>
                                </div>
                            </div>
                            isFirstSlide = false;
                        }
                        </div>
                    <a class="carousel-control-prev"
                       href="#carouselExampleControls"
                       role="button"
                       data-slide="prev">
                        <span class="carousel-control-prev-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next"
                       href="#carouselExampleControls"
                       role="button"
                       data-slide="next">
                        <span class="carousel-control-next-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- section carousel end -->
    <!-- BANNER-AREA START -->
    <div class="banner-area pt-80 padding-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-5">
                    <!-- Single-banner start -->
                    <div class="single-banner banner-1 banner-4">
                        <a class="banner-thumb" asp-controller="Product" asp-action="Detail" asp-route-id="">
                            <img  src="~/img/banner/@Model.Products.ElementAt(0).Image" alt="" />
                        </a>
                        <span class="pro-label new-label">new</span>
                        <span class="price">$@Model.Products.ElementAt(0).Price.00</span>
                        <div class="banner-brief">
                            <h2 class="banner-title"><a asp-controller="Product" asp-action="Detail">@Model.Products.ElementAt(0).Name</a></h2>
                            <p class="mb-0">Furniture</p>
                        </div>
                        <a href="#" class="button-one font-16px" data-text="Buy now">Buy now</a>
                    </div>
                    <!-- Single-banner end -->
                </div>
                <div class="col-lg-7 col-md-7 col-sm-7">
                    <!-- Single-banner start -->
                    <div class="single-banner banner-3">
                        <a class="banner-thumb" asp-controller="Product" asp-action="Detail">
                            <img  src="~/img/banner/@Model.Banners.Image" alt="" />
                        </a>
                        <div class="banner-brief">
                            <h2 class="banner-title">
                                <a class="text-uppercase"asp-controller="Product" asp-action="Detail">
                                   @Html.Raw(Model.Banners.Description)
                                </a>
                            </h2>
                        </div>
                    </div>
                    <!-- Single-banner end -->
                </div>
            </div>
        </div>
    </div>
    <!-- BANNER-AREA END -->
    <!-- section product start -->

    <section id="product" style="overflow: hidden">
        <div class="product-area pt-80 pb-30 product-style-2 padding-100">
            <div class="container">
                <!-- Section-title start -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title text-center">
                            <h2 class="title-center mb-5">Featured Products</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="owl-carousel owl-theme">
                        @await Component.InvokeAsync("Product", 5)

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- section product end -->
    <!--SECTION DISCOUND START-->
    <section id="discount" class="padding-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="div">
                        <div class="owl-carousel disc">
                            @foreach (Blog blog in Model.Blogs)
                            { 
                                <div class="discount-product">
                                    <div class="row">
                                        <div class="col-lg-5 col-md-5 col-sm-6">
                                            <a asp-controller="Blog" asp-action="Detail">
                                                <img src="~/img/discount/@blog.Image" alt="" />
                                            </a>
                                        </div>
                                        <div class="col-lg-7 col-md-7 col-sm-6">
                                            <div class="discount-info mt-5">
                                                <h1 class="text-dark-red">Discount @blog.Discount%</h1>
                                                <p>
                                                    @blog.Description
                                                </p>
                                                <a class="button-2 text-dark-red text-uppercase"
                                                   href="#">
                                                    GET DISCOUNT <i class="fas fa-arrow-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                }
                           
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="up-comming-product">
                        <div class="up-comming-img">
                            <a href="#">
                                <img  src="~/img/product/up-comming.jpg" alt="" />
                            </a>
                        </div>
                        <div class="up-comming-info text-centers">
                            <div class="up-comming-brief">
                                <h4 class="post-title"><a href="#">Indoor Furniture</a></h4>
                                <h4 class="comming-pro-price">$ 200.00</h4>
                            </div>
                            <div class="count-down">
                                <div data-countdown="2021/01/26">
                                    <span class="cdown days">
                                        <span class="time-count">0 </span>
                                        <p>Days</p>
                                    </span>

                                    <span class="cdown hour">
                                        <span class="time-count">0 </span>
                                        <p>Hour</p>
                                    </span>
                                    <span class="cdown minutes">
                                        <span class="time-count">00 </span>
                                        <p>Min</p>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--SECTION DISCOUNT END-->
    <!--SECTION PURCHASE AREA START-->
    <section id="purchase" class="padding-100" style="overflow: hidden">
        <div class="container">
            <!-- Section-title start -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center">
                        <h2 class="title-center">Purchase Online on Hurst</h2>
                    </div>
                </div>
            </div>

            <ul class="nav" id="myTab" role="tablist">
                @foreach (TabList tablist in Model.TabLists)
                {
                    <li class="nav-item" role="presentation">
                        <a class="nav-link @(isActiveTab?"active show":"")"
                           id="Arrivals-tab"
                           data-toggle="tab"
                           href="#@tablist.Name"
                           role="tab"
                           aria-controls="Arrivals"
                           aria-selected="true">@tablist.Name</a>
                    </li>
                    isActiveTab = false;
                }
                    
                </ul>
            <div class="tab-content" id="myTabContent">

                @foreach (TabList tablist in Model.TabLists)
                {
                    <div class="tab-pane fade show  @(isActivePro ? "active show" : "")"
                         id="@tablist.Name"
                         role="tabpanel"
                         aria-labelledby="Arrivals-tab">
                        <div class="col-lg-12">
                            <div class="row">

                                @foreach (Product product in Model.Products)
                                {
                                    //if (product.TabListId == product.Id)
                                    //{
                                        <div class="col-lg-3">
                                            <div class="items">
                                                <div class="card">
                                                    <div class="img-box">
                                                        <span class="pro-label new-label">sale</span>
                                                        <span class="pro-price-2 pro-price-1">$@product.Price.20</span>
                                                        <img src="~/img/product/@product.Image" alt="" />
                                                    </div>
                                                    <div class="card-content p-2">
                                                        <h4><a class="#" asp-controller="Product" asp-action="Detail">@product.Name</a></h4>
                                                        <div class="fix">
                                                            <span class="pro-rating">
                                                                @if (product.Rate > 5)
                                                                {
                                                                    product.Rate = 5;
                                                                }

                                                                @for (int i = 1; i <= 5; i++)
                                                                {
                                                                    <a class='rating-@(i<=product.Rate?"on":"off")'><i class="fas fa-star"></i></a>

                                                                }
                                                            </span>
                                                        </div>
                                                        <div class="product-action">
                                                            <a href="#"
                                                               data-toggle="tooltip"
                                                               data-placement="top"
                                                               title="Wishlist">
                                                                <i class="far fa-heart"></i>
                                                            </a>
                                                            <a href="#"
                                                               data-toggle="modal"
                                                               data-target="#productModal"
                                                               title="Quick View">
                                                                <i class="fas fa-shopping-cart"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    @*}*@
                                }
                            </div>
                        </div>
                    </div>

                    isActivePro = false;
                }
                </div>
        </div>
    </section>
    <!--SECTION PURCHASE AREA END-->
    <!--BLOG SECTION START-->
    <section id="blog"
             class="padding-100"
             style="background-color: lightgray">
        <div class="blog-area blog-2 pt-50">
            <div class="container">
                <!-- Section-title start -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title text-center">
                            <h2 class="title-borders mb-5">From The Blog</h2>
                        </div>
                    </div>
                </div>
                <!-- Section-title end -->
                <div class="row">
                    @await Component.InvokeAsync("Blog", 3)

                </div>
            </div>
        </div>
    </section>
    <!--BLOG SECTION END-->
</main>
