@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="container bg-white p-5">
    <div class="row">
        <div class="col-md-12 ">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.NameCategory">Title</label>
                        <input required asp-for="@Model.NameCategory" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="@Model.NameCategory"></span>
                    </div>
                </div>

            

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-action="Index" class="btn btn-info">Close</a>
                </div>
            </form>
        </div>
    </div>
</div>




