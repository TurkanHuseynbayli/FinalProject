@model List<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-behance">Blogs</h2>
            <a asp-action="Create" class="btn btn-success mb-5">Create</a>

            <div class="table-responsive">
                <table class="table table-striped table-light">
                    <thead>
                        <tr>
                           
                            <th>
                                Category Name
                            </th>
                           
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category cg in Model)
                        {
                            <tr>
                               
                                <td>@cg.NameCategory</td>
                               
                                <td>
                                    <a asp-controller="Category" asp-action="Detail" asp-route-id="@cg.Id" class="btn btn-outline-dark">
                                        <i class="mdi mdi-information"></i>
                                    </a>
                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@cg.Id" class="btn btn-outline-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@cg.Id" class="btn btn-outline-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





