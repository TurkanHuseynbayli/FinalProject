@model Category
@{
    ViewData["Title"] = "Update";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Category</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="@Model.NameCategory">Update Name</label>
                    <input asp-for="@Model.NameCategory" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="@Model.NameCategory"></span>
                </div>
              

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-action="Index" class="btn btn-light">Update</a>
            </form>
        </div>
    </div>
</div>

