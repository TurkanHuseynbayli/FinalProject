@model List<Product>
@{
    ViewData["Title"] = "Index";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-behance">Courses</h2>
            <a asp-action="Create" class="btn btn-success mb-5">Create</a>

            <div class="table-responsive">
                <table class="table table-striped table-light">
                    <thead>
                        <tr>
                            <th>
                                Product Image
                            </th>
                            <th>
                                Product Name
                            </th>
                           
                            <th>
                                Price
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in Model)
                        {
                        <tr>
                            <td><img style="width: 150px; height: 150px; border-radius: 8px!important" src="~/img/product/@product.Image" /></td>
                            <td>@product.Name</td>
                            <td> $@product.Price.00</td>
                            <td>
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="btn btn-outline-dark">
                                    <i class="mdi mdi-information"></i>
                                </a>
                                <a asp-controller="Product" asp-action="Update" asp-route-id="@product.Id" class="btn btn-outline-warning">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

