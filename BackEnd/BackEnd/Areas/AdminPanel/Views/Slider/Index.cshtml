@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider</h4>
            @if (ViewBag.SlideCount < 5)
            {
                <a asp-controller="Slider" asp-action="Create" class="btn btn-success">Create</a>
            }

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Subtitle
                            </th>

                            <th>
                                Settings
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.SlideCount > 1)
                        {
                            foreach (Slider slide in Model)
                            {
                        <tr>

                            <td>
                                <img src="~/img/slider/@slide.Image" style="width:100px!important;height:100px!important;" />
                            </td>
                            <td>@slide.Title</td>
                            <td>@Html.Raw(slide.SubTitle)</td>
                            <td>
                                <a asp-controller="Slider" asp-action="Detail" asp-route-id="@slide.Id" class="btn btn-outline-dark">
                                    <i class="mdi mdi-information"></i>
                                </a>
                                <a asp-controller="Slider" asp-action="Update" asp-route-id="@slide.Id" class="btn btn-outline-warning">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                                <a asp-controller="Slider" asp-action="Delete" asp-route-id="@slide.Id" class="btn btn-outline-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>

                            </td>
                        </tr>

                            }
                        }
                        else
                        {
                            <tr>

                                <td>
                                    <img src="~/img/slider/@Model.ElementAt(0).Image" style="width:100px!important" />
                                </td>
                                <td>
                                    <a asp-controller="Slider" asp-action="Detail" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-secondary">
                                        <i class="mdi mdi-information"></i>
                                    </a>
                                    <a asp-controller="Slider" asp-action="Update" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>

                                </td>
                            </tr>

                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
