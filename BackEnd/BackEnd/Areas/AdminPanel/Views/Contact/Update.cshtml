@model Contact
@{
    ViewData["Title"] = "Update";
}

<div class="row mt-3">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Update Contact</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                   
                    <div class="form-group">
                       

                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label asp-for="Phone"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Phone">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="text-center">

                        <h3 class="mb-3">Add Image</h3>
                        <div class="row">
                            <img src="~/img/contact/@Model.Image" width="300" height="100" />
                        </div>
                        <div class="row align-items-center bg-light">
                            <div class="col-md-8">
                                <div class="custom-file my-3">
                                    <input asp-for="@Model.Photo" class="custom-file-input">
                                    <label asp-for="@Model.Photo" class="custom-file-label">Choose file</label>
                                    <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <img height="200" width="200" class="image-preview img-fluid my-4" />
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-warning mr-2">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_Validation" />
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $("#Photo").change(function () {
            var file = this.files[0];
            var fileReader = new FileReader();
            fileReader.onload = function (e) {
                $(".image-preview").attr("src", e.target.result);
            };
            fileReader.readAsDataURL(file, "UTF-8");
        });
    });
</script>

