@model Contact

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Contact Table</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Phone
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    <img src="~/img/contact/@Model.Image" style="width:50px;height:50px" />
                                </td>
                                <td>@Model.Email</td>
                                <td>@Model.Phone</td>

                                <td>
                                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                </td>
                            </tr>

                      

                         
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


