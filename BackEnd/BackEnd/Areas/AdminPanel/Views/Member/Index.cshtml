@model List<Member>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Member</h4>
            @if (ViewBag.MemberCount < 5)
            {
                <a asp-controller="Member" asp-action="Create" class="btn btn-success">Create</a>
            }

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>

                            <th>
                                Specialty
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Settings
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.MemberCount > 1)
                        {
                            foreach (Member member in Model)
                            {
                        <tr>

                            <td>
                                <img src="~/img/team/@member.Image" style="width:100px!important;height:100px!important;" />
                            </td>
                            <td>
                                <h3 class="text-uppercase">@member.Name</h3>
                            </td>
                            <td>
                                <h4 class="text-uppercase text-gray">@member.Specialty</h4>
                            </td>
                            <td>
                                <p class="text-gray">
                                    @member.Description
                                </p>
                            </td>
                            <td>
                                <a asp-controller="Member" asp-action="Detail" asp-route-id="@member.Id" class="btn btn-outline-dark">
                                    <i class="mdi mdi-information"></i>
                                </a>
                                <a asp-controller="Member" asp-action="Update" asp-route-id="@member.Id" class="btn btn-outline-warning">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                                <a asp-controller="Member" asp-action="Delete" asp-route-id="@member.Id" class="btn btn-outline-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>

                            </td>
                        </tr>

                            }
                        }
                        else
                        {
                            <tr>

                                <td>
                                    <img src="~/img/team/@Model.ElementAt(0).Image" style="width:100px!important" />
                                </td>
                                <td>
                                    <a asp-controller="Member" asp-action="Detail" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-secondary">
                                        <i class="mdi mdi-information"></i>
                                    </a>
                                    <a asp-controller="Member" asp-action="Update" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>

                                </td>
                            </tr>

                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

