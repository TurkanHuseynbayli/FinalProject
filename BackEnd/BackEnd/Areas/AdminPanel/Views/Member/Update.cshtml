@model Member
@{
    ViewData["Title"] = "Update";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Slider</h4>
           
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="col-md-8 offset-md-2 mb-3">
                        <img src="~/img/team/@Model.Image" alt="Alternate Text" />
                    </div>
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" accept="image/*" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label asp-for="Specialty"></label>
                    <input asp-for="Specialty" class="form-control" accept="image/*" placeholder="Specialty">
                    <span asp-validation-for="Specialty" class="text-danger"></span>
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>

                <div class="text-center mb-2">
                    <h3 class="mb-3">Add Image</h3>
                    <div class="row align-items-center bg-light">
                        <div class="col-md-8">
                            <div class="custom-file my-3">
                                <input asp-for="@Model.Photo" class="custom-file-input">
                                <label asp-for="@Model.Photo" class="custom-file-label">Choose file</label>
                                <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <img height="200" width="200" class="image-preview img-fluid my-4" />
                        </div>
                    </div>
                </div>


                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_Validation" />

}

<script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Description'))
        .catch(error => {
            console.error(error);
        });
</script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $("#Photo").change(function () {
            var file = this.files[0];
            var fileReader = new FileReader();
            fileReader.onload = function (e) {
                $(".image-preview").attr("src", e.target.result);
            };
            fileReader.readAsDataURL(file, "UTF-8");
        });
    });
</script>

