@model Blog
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/img/blog/@Model.Image" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>

                    <form method="post">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-outline-warning">Close</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

