@model Blog

@{
    ViewData["Title"] = "Detail";
}

<div class="blog-details-area pt-150 pb-140 text-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="blog-details text-center">
                    <div class="blog-details-img">
                        <img width="620" src="~/img/blog/@Model.Image" alt="blog-details">
                    </div>
                    <div class="blog-details-content mt-5 text-center bg-white p-5">
                        <h2>@Model.Name </h2>
                        <h6>@Model.Date.ToString("MMMM dd, yyyy") </h6>
                        <p>@Html.Raw(Model.BlogDetail.Description)</p>
                        <a class="btn btn-outline-info" asp-action="Index">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

