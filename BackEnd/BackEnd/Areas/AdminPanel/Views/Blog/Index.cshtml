@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-behance">Blogs</h2>
            <a asp-action="Create" class="btn btn-success mb-5">Create</a>

            <div class="table-responsive">
                <table class="table table-striped table-light">
                    <thead>
                        <tr>
                            <th>
                                Blog Image
                            </th>
                            <th>
                                Blog Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Blog blogs in Model)
                        {
                        <tr>
                            <td><img style="width: 150px; height: 150px; border-radius: 8px!important" src="~/img/blog/@blogs.Image" /></td>
                            <td>@blogs.Name</td>
                            <td>@blogs.Description</td>
                            <td>
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blogs.Id" class="btn btn-outline-dark">
                                    <i class="mdi mdi-information"></i>
                                </a>
                                <a asp-controller="Blog" asp-action="Update" asp-route-id="@blogs.Id" class="btn btn-outline-warning">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                                <a asp-controller="Blog" asp-action="Delete" asp-route-id="@blogs.Id" class="btn btn-outline-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<nav class="navigation d-flex justify-content-center" aria-label="Page navigation example">
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.PageCount; i++)
        {
            if (i == ViewBag.Page)
            {
                <li class="page-item disabled">
                    <a class="page-link d-flex justify-content-center" style="padding:17px;" asp-area="AdminPanel" asp-controller="Product" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" style="padding:17px" asp-controller="Blog" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }

        }
    </ul>
</nav>